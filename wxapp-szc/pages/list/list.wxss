/* pages/list/list.wxss */

swiper{
  width:100%;
  height:440rpx;
}

swiper image {
  width:100%;
  height:400rpx;
}

.weui-grid image{
  width: 90rpx;
  height: 90rpx;
}

.weui-grid{
  padding:10px!important;
}

.weui-grid__label{
  font-size:24rpx;
}

.weui-flex .placeholder{
  text-align: center;
  font-size:30rpx; 
}

.weui-flex .active{
  font-size: 34rpx;
  font-weight: 400;
  color:#000000;
}

.weui-flex .more{
   border-left: 1px solid #dddddd;
}

.weui-cells:before{
  border-top:0;
}

.weui-cells::after{
  border-bottom:0;
}

.page__bd_spacing{
   padding:20rpx 0;
}

.taoxiang{
  width: 60px;
  height: 60px;
  margin-left:16px;
  margin-right: 16px;
  vertical-align:middle;
  border-radius: 60rpx;
}

.user{
  font-size:24rpx;
  width: 100%;
}

.user_member{
  width: 50%;
  padding:5rpx;
  margin-top:10rpx;
  border:1px solid #dddddd;
  border-radius: 10rpx;
  font-size: 20rpx;
  text-align: center;
  color:#999;
}

.dhj .weui-flex__item{
  text-align: center;
  font-size: 24rpx;
  padding:0 20rpx;
}

.hdgg{
  background-color: #FDE024;
}

.gonggao-icon{
  font-size: 24rpx;
  display: flex;
}

.gonggao-icon image{
   margin-right: 5px;
   vertical-align: middle;
   width:20px; 
   height: 20px;
}

.gonggao{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  height: 20px;
  line-height: 20px;
}

.zxhd .page__hd{
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  height: 60rpx;
  line-height: 60rpx;
}

.zxhd .page__title{
  font-size:24rpx;
}

.zxgp,.ywtj,.news{
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  height: 60rpx;
  line-height: 60rpx;
}

.topNav{
  background-color: #FDE024;
}

.hd_tit_pr{
  padding:10px 0;
}

.hd_tit{
  font-size:34rpx;
  line-height: 50rpx;
  margin-bottom:20rpx;
}

.hd_tit_btn {
  width:320rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 10rpx;
}

.price{
  font-szie: 40rpx;
  color:#FD5107;
  margin-right:2px;
}

.g_price{
  color: #dddddd;
}

.hd_tit_btn .gmbtn{
   margin: 0;
   border-radius: 60rpx;
   background-color: #FD5107;
   width: 180rpx;
   height: 45rpx;
   line-height: 1.8!important;
   font-size: 24rpx;
}

.title{
   width:320rpx;
   height: 30px;
   line-height: 30px;
   overflow: hidden;
   white-space: nowrap;
   text-overflow:ellipsis;
   text-align: left;
   margin-bottom: 10rpx;
}

.gp_tit {
   width:320rpx;
   height:220rpx;
}

.gp_tit image{
   width:320rpx;
   height:220rpx;
}

.gp_img image{
   width: 185rpx;
   height: 185rpx;
}

.goupiao{
   margin-top: 20px;
   border:1px solid #dddddd;
   border-radius: 5px;
   padding:10px;
}

.goupiao .hd_tit_btn{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content{
   padding:0 20px;
}