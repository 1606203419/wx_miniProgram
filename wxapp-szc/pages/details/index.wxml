                  想知道卡丁车馆有多好玩？
                  格林披治卡丁车馆想知道卡丁车馆有多好玩？
                  格林披治卡丁车馆想知道卡丁车馆有多好玩？
                  格林披治卡丁车馆
              </view>
           </view>
        </view>

    </view>
  </view>
  <!-- end 详情内容 -->

  <!-- 底部购买按钮 -->
<van-goods-action>
    <van-goods-action-icon
        icon="chat-o"
        text="客服"
        bind:click="onClickIcon"
    />
    <van-goods-action-icon
        icon="cart-o"
        text="购物车"
        bind:click="bbDetail"
    />
    <van-goods-action-button
        text="加入购物车"
        type="warning"
        bind:click="ddOrder"
    />
    <van-goods-action-button
        text="立即购买"
        bind:click="nowBuy"
    />
</van-goods-action>
