        <!-- 项目栏目 -->
        <view class="page__bd">
            <!-- 用户资料  -->
            <view class="weui-cell user_meg">
                <view class="weui-cell__hd">
                  <image src="../../images/user/xuwei.jpg" class="taoxiang" />
                </view>
                <view class="weui-cell__bd weui-cell_primary user">
                    <view class='user_name'>用户名</view>
                    <view class="user_member">未加入会员卡</view>
                </view>
                <view class="weui-cell__ft">
                    <view class="weui-flex dhj">
                        <navigator class="weui-flex__item" url="/pages/order/index" hover-class="navigator-hover">
                          <view class="dhj_num">1</view>
                          <view class="dhj_tit">订单</view>
                        </navigator>
                        <navigator class="weui-flex__item" url="/pages/hongbao/index" hover-class="navigator-hover">
