                          <view class="hd-pro" catchtap="xlying">夏令营</view>
                        </view>
                    </view>
                    <!-- <view class="page__desc">1/4</view> -->
                  </view>
                  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="blue">
                    <block wx:for="{{images}}" wx:key="*this">
