/* pages/nowbuy/nowbuy.wxss */
.listbuy {
  display: flex;
  align-item:center;
  border-bottom:1px solid #efefef;
  padding:20rpx 0;
}

.title {
  font-size: 30rpx;
  font-weight: 400;
  margin:10rpx 0 0 0;
}

.content_img {
  width: 30%;
  height:150rpx;
  padding-left:20rpx;
}

.content {
  font-size: 16px;
  color: #666;
  text-indent: 16px;
  line-height: 28px;
}

.love_attention{
  width:60%;
  padding-left:20rpx;
  padding-right: 20rpx;
}

.love_attention image {
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
}

.love_attention text {
  font-size: 30rpx;
  color: red;
  vertical-align: middle;
}

.love_attention .date{
  font-size: 30rpx;
  color:#999;
}
.page__bd{
    height: 100%;
}
.page__bd{
    padding:0 4% 4% 4%;
}
.page__bd_spacing{
  width: 92%;
  height: 100px;
  line-height: 50px;
  position: fixed;
  bottom: 0;
  background-color:#fff;
  font-size: 18px;
  border-top:1px solid #ddd;
}

.page__bd_spacing .price{
  display:flex;
  justify-content: space-between;
}

.placeholder{
  text-align: center;
}
.carbg{
  width: 48%;
  border:1px solid #ddd;
}
.carbg .active{
  background-color:#3fbbef;
  color:#fff;
}
.price-width{
  width:48%;
  text-align: center;
}

.text-danger{
  color: red;
}

/*手机号验证*/
.yanCode{
  padding:10px;
}

.yanCode .row{
  position: relative;
  height: 90rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.yanCode .row input{
  width: 100%;
  height:100%;
}
.codeBtn{
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  width: 30%;
  font-size: 35rpx;
  height: 90rpx;
  line-height: 80rpx;
  background-color: #00abe7;
}
.subBtn{
  width: 200rpx;
  height: 80rpx;
  background: #fff;
  color: #000;
  border-radius: 50rpx;
  line-height: 80rpx;
}