<!--pages/order/order.wxml-->
<!-- <text>我的订单</text> -->
<view class="page">
    <view class="page__bd">
      <view class="weui-tab">
          <view class="weui-navbar">
              <block wx:for="{{tabs}}" wx:key="*this">
                  <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                      <view class="weui-navbar__title">{{item}}</view>
                  </view>
              </block>
              <view class="weui-navbar__slider" style="left: 0px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
          </view>
          <view class="weui-tab__panel">
              <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <view>购买时间：2018-08-25 19:05:47</view>
                    <view>订单信息：<text>入园消费50元抵用券</text> <text>2018-08-25</text> <text>X2</text></view>
                    <view>订单号：OE180825000345</view>
                    <view class='orderNum'>订单总额：￥<text class='price'>20</text> <text style='float:right;color:#00c3ff'>查看订单</text> </view>
              </view>
              <view class="weui-tab__content" hidden="{{activeIndex != 1}}">已取票</view>
              <view class="weui-tab__content" hidden="{{activeIndex != 2}}">未支付</view>
              <view class="weui-tab__content" hidden="{{activeIndex != 3}}">已退票</view>
          </view>
      </view>
    </view>
  </view>
