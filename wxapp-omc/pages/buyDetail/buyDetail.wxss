/* pages/buyDetail/buyDetail.wxss */
.detailContainer {
  display: flex;
  flex-direction: column;
  margin-bottom:120rpx;
}

.detail_page{
  padding-left: 30rpx;
  padding-right: 30rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
}

.detail_title {
  font-size: 32rpx;
  font-weight: bold;
}

.detail_content {
  line-height: 28px;
  margin-top: 20rpx;
}

.detail_price{
  font-size: 20px;
  color: red;
  margin-bottom: 20rpx;
}

.weui-cell{
  padding: 0;
}

.weui-input {
   text-align: right;
}

.detail_header{
  width:100%;
  height:400rpx;
}

.data_icon{
  width:17px;
  height:17px;
  vertical-align:middle;
}

.weui-cell__bd{
  display:flex;
  justify-content:flex-end;
  align-items: center;
}

.gp-number{
  height: 50px;
}

.weui-cell__bd button{
  width:30px;
  height:30px;
  line-height:30px;
  text-align: center;
  margin:0;
  font-size: 14px;
  padding: 0;
}

.weui-cell__bd input{
  width:30px;
  height:28px;
  line-height:28px;
  border:1px solid #ddd;
  text-align: center;
  font-size:12px;
}

.page__bd_spacing{
  width: 100%;
  height: 50px!important;
  line-height: 50px;
  position: fixed;
  bottom: 0;
  background-color: #ddd;
}

.placeholder{
  text-align: center;
  font-size: 14px;
  width: 100%;
}

.carbg{
  width: 20%
}

.order{
  width: 20%
}

.addcar{
  width: 30%;
  background-color:red;
  color:#fff;
}

.lkbuy{
  width: 30%;
  background-color:blue;
    color:#fff;
}

.musicImg {
  width:60rpx;
  height:60rpx;
  position: absolute;
  left:50%;
  top:200rpx;
  margin-left: -30rpx;
}

.detail_author_date {
  padding:10rpx;
}

.detail_author_date image{
  width:64rpx;
  height:64rpx;
  border-radius: 32rpx;
  vertical-align: middle;
}

.detail_author_date text {
  font-size: 14px;
  vertical-align: middle;
  margin-left: 6px;
}

.detail_collection_share{
  position: relative;
}

.col_share_img {
  float: right;
  margin-right: 60rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.col_share_img image {
  width:90rpx;
  height:90rpx;
  margin-right:10rpx;
}

.line {
  position: absolute;
  top:45rpx;
  left: 5%;
  width:90%;
  height:1px;
  background: #eee;
  z-index:-1;
}

button{
  width:260rpx;
  height:80rpx;
}

.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    padding-bottom: 60px;
    text-align: center;
}