<view class="page" >
    <view class="page__bd">
    <form bindsubmit="editMan" report-submit="true">
        <input text="hidden" name="id" value='{{res.id}}'  />
        <view class="weui-cells__title">姓名</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="title" placeholder="请输入姓名"  value='{{res.title}}'  />
                </view>
            </view>
        </view>
        <view class="weui-cells__title">年龄</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="age" placeholder="请输入年龄" value='{{res.age}}'  />
                </view>
            </view>
        </view>
        <view class="weui-cells__title">简介</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" name="summary" placeholder="" style="height: 3.3em" value='{{res.summary}}'  />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" formType="submit" >确定</button>
        </view>
    </form>
    </view>
</view>